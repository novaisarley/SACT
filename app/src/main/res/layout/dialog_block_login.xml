<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_inset"
    android:orientation="vertical"
    android:paddingHorizontal="40dp"
    android:paddingVertical="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:lineHeight="30dp"
        android:fontFamily="@font/segoeui"
        android:text="Você já concluiu todas as suas fichas de avaliações!"
        android:textAlignment="center"
        android:textColor="@color/textGray"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:lineHeight="30dp"
        android:fontFamily="@font/segoeui"
        android:text="Você não pode navegar na aplicação!"
        android:textAlignment="center"
        android:textColor="@color/textGray"
        android:textSize="22sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/segoeui"
        android:lineHeight="30dp"
        android:text="Venha conhecer os outros projetos presentes na feira!"
        android:textAlignment="center"
        android:textColor="@color/textGray"
        android:textSize="22sp" />

    <Button
        android:id="@+id/dialog_block_login_bt_ok"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/borda_button"
        android:fontFamily="@font/segoeui"
        android:text="@android:string/ok"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>